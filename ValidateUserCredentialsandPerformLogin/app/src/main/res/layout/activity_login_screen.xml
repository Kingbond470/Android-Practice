<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".LoginScreen">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome !"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        android:textSize="40sp"
        />
    <TextView
        android:id="@+id/tvGetbest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get the best from our app"
        android:textColor="@color/black"
        android:textSize="25sp"
        />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        android:drawableLeft="@drawable/person_vector"
        android:paddingLeft="20dp"
        android:drawablePadding="20dp"
        android:padding="15dp"
        android:gravity="start"
        android:layout_marginTop="80dp"
        android:textColor="@color/black"
        android:background="@drawable/login_button"
        />
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        android:drawableLeft="@drawable/password_vector"
        android:paddingLeft="20dp"
        android:drawablePadding="20dp"
        android:padding="15dp"
        android:gravity="start"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:background="@drawable/login_button"
        />

    <Button
        android:id="@+id/btnForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:fontFamily="@font/poppins_light"
        android:padding="5dp"
        android:text="Forgot Password?"
        android:drawableBottom="@drawable/forgotpassword"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textColor="@color/blue_login"
        android:textSize="15sp" />



    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:backgroundTint="@color/blue_login"
        android:fontFamily="@font/poppins_light"
        android:padding="8dp"
        android:text="Login"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textSize="25sp" />

</LinearLayout>